@using MvcContrib
<article data-role="page" id="login">
    <script src="@Url.Content("~/Account/ViewModels/login.js")" type="text/javascript"></script>

    <section data-role="header">
        <a class="back" href="#home" data-transition="reverse slide">Home</a>
        <h1>Log in</h1>
    </section>

    <section data-role="content">
        <fieldset>
            <div data-role="fieldcontain">
                <label>Username</label> <input type="text" data-bind="value: username" />
            </div>
            <div data-role="fieldcontain">
                <label>Password</label> <input type="password" data-bind="value: password" />
            </div>
            <input data-bind="click: logIn" type="button" value="Log in!" />
            <p data-bind="text: error" class="errorMessage"></p>
        </fieldset>
    </section>
</article>

